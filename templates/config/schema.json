{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for the app configuration",
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "key": {
                "type": "string",
                "uniqueItems": true
            },
            "value": {
                "type": "string"
            },
            "label": {
                "type": "string",
                "enum": [
                    "{{serviceName}}"
                ]
            },
            "content_type": {
                "type": "string",
                "enum": [
                    "keyvault"
                ]
            },
            "tags": {
                "type": "object"
            }
        },
        "required": [
            "key",
            "value",
            "label"
        ],
        "if": {
            "properties": {
                "content_type": {
                    "const": "keyvault"
                }
            }
        },
        "then": {
            "properties": {
                "value": {
                    "pattern": "^[a-zA-Z0-9-]+$"
                }
            }
        }
    }
}